<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="30" client="site" method="upgrade">
	<name>MOD_TAGCLOUD</name>
	<author>Media A-Team, Inc.</author>
	<creationDate>January 2012</creationDate>
	<copyright>Copyright (C) 2005-2016  Media A-Team, Inc. - All rights reserved.</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>3.1</version>
	<description>MOD_TAGCLOUD_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_tagcloud">mod_tagcloud.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="params">
				<field name="moduleclass_sfx"
					type="text"
					default=""
					label="MOD_TAGCLOUD_CLASS_SUFFIX_LABEL"
					description="MOD_TAGCLOUD_CLASS_SUFFIX_DESC"
				/>
				<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="table"
					type="text"
					size="20"
					default=""
					label="MOD_TAGCLOUD_TABLE_LABEL"
					description="MOD_TAGCLOUD_TABLE_DESC"
				/>
				<field name="column"
					type="text"
					size="20"
					default=""
					label="MOD_TAGCLOUD_COLUMN_LABEL"
					description="MOD_TAGCLOUD_COLUMN_DESC"
				/>
				<field
					name="filter"
					type="text"
					size="20"
					default=""
					label="MOD_TAGCLOUD_FILTER_LABEL"
					description="MOD_TAGCLOUD_FILTER_DESC"
				/>
				<field name="url"
					type="text"
					size="20"
					default=""
					label="MOD_TAGCLOUD_URL_LABEL"
					description="MOD_TAGCLOUD_URL_DESC"
				/>
				<field name="css"
					type="textarea"
					cols="20"
					rows="5"
					default=""
					label="MOD_TAGCLOUD_CSS_LABEL"
					description="MOD_TAGCLOUD_CSS_DESC"
				/>
				<field name="splitter"
					type="text"
					size="1"
					default=","
					label="MOD_TAGCLOUD_SPLITTER_LABEL"
					description="MOD_TAGCLOUD_SPLITTER_DESC"
				/>
				<field name="alphabetically"
					type="list"
					default="1"
					label="MOD_TAGCLOUD_ORDER_LABEL"
					description="MOD_TAGCLOUD_ORDER_DESC"
					>
						<option value="0">MOD_TAGCLOUD_ORDER_SIZE_ASC</option>
						<option value="1">MOD_TAGCLOUD_ORDER_SIZE_DESC</option>
						<option value="2">MOD_TAGCLOUD_ORDER_ALPH_ASC</option>
						<option value="3">MOD_TAGCLOUD_ORDER_ALPH_DESC</option>
				</field>
				<field name="min"
					type="text"
					size="1"
					default="1"
					label="MOD_TAGCLOUD_MINIMUM_LABEL"
					description="MOD_TAGCLOUD_MINIMUM_DESC"
				/>
				<field
					name="max"
					type="text"
					size="1"
					default="20"
					label="MOD_TAGCLOUD_MAXIMUM_LABEL"
					description="MOD_TAGCLOUD_MAXIMUM_DESC"
				/>
				<field name="seperator"
					type="text"
					size="5"
					default=" :: "
					label="MOD_TAGCLOUD_SEPARATOR_LABEL"
					description="MOD_TAGCLOUD_SEPARATOR_DESC"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
