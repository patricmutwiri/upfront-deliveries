				description="PLG_CRON_GCAL_PASSWD_DESC"
				label="PLG_CRON_GCAL_PASSWD_LABEL" />	
					
			<field name="gcal_sync_startdate_element"
				type="element"
				required="true"
				connection="params_connection"
				connection_in_repeat="false"
				description="PLG_CRON_GCAL_START_DATE_ELEMENT_DESC"
				label="PLG_CRON_GCAL_START_DATE_ELEMENT_LABEL"
