				description="PLG_CRON_GCAL_USER_ID_ELEMENT_DESC"
				label="PLG_CRON_GCAL_USER_ID_ELEMENT_LABEL"
				table="params_table" />
				 
			<field name="gcal_sync_id_element"
				type="element"
				required="true"
				connection="params_connection"
				connection_in_repeat="false"
				description="PLG_CRON_GCAL_ID_ELEMENT_DESC"
				label="PLG_CRON_GCAL_ID_ELEMENT_LABEL"
				table="params_table" />
				
		</fieldset>
	</fields>
