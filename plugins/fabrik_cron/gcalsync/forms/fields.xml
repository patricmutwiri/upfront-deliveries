			<field name="gcal_sync_enddate_element" 
				type="element"
				required="true"
				connection="params_connection"
				connection_in_repeat="false"
				description="PLG_CRON_GCAL_END_DATE_ELEMENT_DESC"
				label="PLG_CRON_GCAL_END_DATE_ELEMENT_LABEL"
				table="params_table" />
				
			<field name="gcal_sync_label_element"
				type="element"
				required="true"
				connection="params_connection"
				connection_in_repeat="false"
				description="PLG_CRON_GCAL_LABEL_ELEMENT_DESC"
				label="PLG_CRON_GCAL_LABEL_ELEMENT_LABEL" 
				table="params_table" />
				
			<field name="gcal_sync_desc_element"
				type="element"
				connection="params_connection"
				connection_in_repeat="false"
