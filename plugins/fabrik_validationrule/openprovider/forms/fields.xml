<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset name="plg-validationrule-openprovider">

			<field type="text"
				size="30"
				name="openprovider_username"
				label="PLG_VALIDATION_OPENPROVIDER_USERNAME_LABEL"
				description="PLG_VALIDATION_OPENPROVIDER_USERNAME_DESC" />

			<field type="text"
				size="30"
				name="openprovider_password"
				label="PLG_VALIDATION_OPENPROVIDER_PASSWORD_LABEL"
				description="PLG_VALIDATION_OPENPROVIDER_PASSWORD_DESC" />

			<field name="openprovider-message"
				type="text"
				size="30"
				description="PLG_VALIDATIONRULE_OPENPROVIDER_ERROR_DESC"
				label="PLG_VALIDATIONRULE_OPENPROVIDER_ERROR_LABEL" />

			<field  name="openprovider-validation_condition"
				type="fabrikeditor"
				mode="php"
				description="PLG_VALIDATIONRULE_OPENPROVIDER_CONDITION_DESC"
				label="PLG_VALIDATIONRULE_OPENPROVIDER_CONDITION_LABEL"/>

			<field name="tip_text"
			       type="textarea"
			       repeat="true"
			       cols="30" rows="3"
			       description="COM_FABRIK_VALIDATION_TIP_TEXT_DESC"
			       label="COM_FABRIK_VALIDATION_TIP_TEXT_LABEL"/>

			<field name="icon"
			       type="field"
			       repeat="true"
			       description="PLG_FABRIK_VALIDATION_ICON_DESC"
			       label="PLG_FABRIK_VALIDATION_ICON_LABEL" />

		</fieldset>
	</fields>
</form>
