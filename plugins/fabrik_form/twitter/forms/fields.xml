<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields
		addfieldpath="/administrator/components/com_fabrik/models/fields"
		name="params">
		<fieldset
			addfieldpath="/plugins/fabrik_form/twitter/elements"
			name="plg-form-twitter">

			<field name="twitter_consumer_key"
				type="text"
				description="PLG_FORM_TWITTER_CONSUMER_KEY_DESC"
				label="PLG_FORM_TWITTER_CONSUMER_KEY_LABEL"
				repeat="true"
				size="30" />

			<field name="twitter_consumer_secret"
				type="text"
				description="PLG_FORM_TWITTER_CONSUMER_SECRET_KEY_DESC"
				label="PLG_FORM_TWITTER_CONSUMER_SECRET_KEY_LABEL"
				repeat="true"
				size="30" />

			<field name="twitter_msg_field"
				type="listfields"
				default=""
				description="PLG_FORM_TWITTERMSGFIELD_DESC"
				label="PLG_FORM_TWITTERMSGFIELD_LABEL"
				onlytablefields="0"
				repeat="true" />

			<field name="twitter_msg_tmpl"
				type="textarea"
				cols="30"
				description="PLG_FORM_TWITTERTMPLFIELD_DESC"
				label="PLG_FORM_TWITTERTMPLFIELD_LABEL"
				repeat="true"
				rows="6" />

			<field name="twitter-show-success-msg"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_FORM_TWITTERSHOWSUCCESSMSG_DESC"
				label="PLG_FORM_TWITTERSHOWSUCCESSMSG_LABEL"
				repeat="true">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field name="twitter_bitly_api_login"
				type="text"
				default=""
				description="PLG_FORM_TWITTER_BITLY_API_LOGIN_DESC"
				label="PLG_FORM_TWITTER_BITLY_API_LOGIN"
				repeat="true"
				size="20" />

			<field name="twitter_bitly_api_key"
				type="text" 
				default=""
				description="PLG_FORM_TWITTER_BITLY_API_KEY_DESC"
				label="PLG_FORM_TWITTER_BITLY_API_KEY"
				repeat="true"
				size="30"/>

			<field name="twitter_oauth_token"
				type="twittersignin"
				description="PLG_FORM_TWITTER_SIGNIN_DESC"
				label="PLG_FORM_TWITTER_SIGNIN_LABEL"
				repeat="true" />

			<field name="twitter_oauth_token_secret"
				type="text"
				description="PLG_FORM_TWITTER_OAUTH_TOKEN_SECRET_DESC"
				label="PLG_FORM_TWITTER_OAUTH_TOKEN_SECRET_LABEL"
				repeat="true" />

			<field name="twitter_oauth_user"
				type="text"
				description="PLG_FORM_TWITTER_OAUTH_USER_DESC"
				label="PLG_FORM_TWITTER_OAUTH_USER_LABEL"
				repeat="true"  />
		</fieldset>
	</fields>
</form>
