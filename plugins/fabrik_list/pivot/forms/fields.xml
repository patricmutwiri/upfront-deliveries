<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset name="plg-list-php">

			<field type="helplink"
				url="PLG_LIST_PIVOT_HELP_SERVER" />
			
			<field name="pivot_sum"
				type="listfields"
				valueformat="tableelement"
				usestep="true"
				raw="true"
				repeat="true"
				description="PLG_LIST_PIVOT_SUM_FIELDS_DESC"
				label="PLG_LIST_PIVOT_SUM_FIELDS_LABEL"  />
				
			<field name="pivot_count"
				type="radio"
				default="0"
				repeat="true"
				class="btn-group"
				description="PLG_LIST_PIVOT_COUNT_FIELDS_DESC"
				label="PLG_LIST_PIVOT_COUNT_FIELDS_LABEL">
				<option value="0">JNO</option>
				<option value="1">JYES</option>	
        </field>
				
			<field name="pivot_group"
				type="listfields"
				valueformat="tableelement"
				usestep="true"
				mode="gui"
				repeat="true"
				description="PLG_LIST_PIVOT_GROUP_FIELDS_DESC"
				label="PLG_LIST_PIVOT_GROUP_FIELDS_LABEL"  />
			
			<field name="pivot_xcol"
				type="listfields"
				valueformat="tableelement"
				usestep="true"
				repeat="true"
				description="PLG_LIST_PIVOT_X_COL_DESC"
				label="PLG_LIST_PIVOT_X_COL_LABEL"  />
				
			<field name="pivot_ycol"
				type="listfields"
				valueformat="tableelement"
				usestep="true"
				repeat="true"
				description="PLG_LIST_PIVOT_Y_COL_DESC"
				label="PLG_LIST_PIVOT_Y_COL_LABEL"  />

			<field name="pivot_sort" 
				type="list" 
				default="dblclick" 
				description="PLG_LIST_PIVOT_SORT_BY_TOTAL_DESC" 
				label="PLG_LIST_PIVOT_SORT_BY_TOTAL_LABEL" 
				repeat="true"> 
					<option value="0">JNO</option> 
					<option value="1">PLG_LIST_PIVOT_SORT_DESC</option> 
					<option value="2">PLG_LIST_PIVOT_SORT_ASC</option> 
			</field> 
				
			<field name="pivot_format_totals" 
				type="radio" 
				default="0" 
				repeat="true" 
				class="btn-group" 
				label="PLG_LIST_PIVOT_FORMAT_NUMBERS_LABEL" 
				description="PLG_LIST_PIVOT_FORMAT_NUMBERS_DESC"> 
					<option value="0">JNO</option> 
					<option value="1">JYES</option> 
			</field> 
				
			<field 
				description="PLG_LIST_PIVOT_ROUND_TO_DESC" 
				label="PLG_LIST_PIVOT_ROUND_TO_LABEL" 
				name="pivot_round_to" 
				repeat="true" 
				size="3" 
				type="text" 
				default="2" 
			/> 
				
			<field 
				description="PLG_LIST_PIVOT_DECIMAL_SEPCHAR_DESC" 
				label="PLG_LIST_PIVOT_DECIMAL_SEPCHAR_LABEL" 
				name="pivot_decimal_sepchar" 
				repeat="true" 
				size="3" 
				type="text" 
				default="." 
			/> 
				
			<field 
				description="PLG_LIST_PIVOT_THOUSAND_SEPCHAR_DESC" 
				label="PLG_LIST_PIVOT_THOUSAND_SEPCHAR_LABEL" 
				name="pivot_thousand_sepchar" 
				repeat="true" 
				size="40" 
				type="text" 
			/> 
	
			<field name="pivot_cache"
				type="radio"
				default="1"
				repeat="true"
				class="btn-group"
				label="PLG_LIST_PIVOT_CACHE_LABEL"
				description="PLG_LIST_PIVOT_CACHE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
			
		</fieldset>
	</fields>
</form>
