<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields name="params">
		<fieldset name="plg-element-jsperiodical">

			<field type="helplink"
				url="PLG_ELEMENT_JSPERIODICAL_HELP_SERVER" />

			<field name="jsperiod_period"
				type="text"
				class="input-mini"
				default="100"
				description="PLG_ELEMENT_JSPERIODICAL_TIME_DESC"
				label="PLG_ELEMENT_JSPERIODICAL_TIME_LABEL"
				size="3" />

			<field name="jsperiod_code"
				type="fabrikeditor"
				mode="javascript"
				description="PLG_ELEMENT_JSPERIODICAL_OBSERVER_CODE_DESC"
				label="PLG_ELEMENT_JSPERIODICAL_OBSERVER_CODE_LABEL" />

			<field name="readonly"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_JSPERIODICAL_READ_ONLY_DESC"
				label="PLG_ELEMENT_JSPERIODICAL_READ_ONLY_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

		</fieldset>

	</fields>
</form>
